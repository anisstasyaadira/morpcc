{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Project",
            "type": "shell",
            "command": "./build.sh",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Generate migrations",
            "type": "shell",
            "command": "./bin/alembic revision --autogenerate -m ${input:message}",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "clear": false
            },
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "problemMatcher": null

        },
        {
            "label": "Test Project",
            "type": "shell",
            "command": "./bin/pytest --cov-report html --cov=morpfw --annotate-output=annotations.json --html=report.html --self-contained-html -s morpcc",
            "group": "test",
        },
        {
            "label": "Test Current File",
            "type": "shell",
            "command": "./bin/pytest -s ${relativeFile}",
            "group": "test",
        },
                {
            "label": "Initialize Database",
            "type": "shell",
            "command": "./bin/alembic upgrade head",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "clear": false
            },
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "problemMatcher": null
        },
        {
            "label": "Create default admin user (admin:admin)",
            "type": "shell",
            "command": "./bin/morpfw -s ./morpcc/tests/democms/settings.yml register-admin -u admin -e admin@localhost.local -p admin",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "clear": false
            },
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "problemMatcher": null
        }
    ],
    "inputs": [
        {"id":"message",
            "type": "promptString",
            "description" : "Revision message"}
    ]
}
